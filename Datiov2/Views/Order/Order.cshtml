            <div class="cart_page">
                <div class="cart_products_box">
                    <h3 class="product_category_type_text">Orderbekräftelse </h3>
                    @foreach (var cartItem in cartItems)
                    {
                        <div class="cart_item_box">
                            <div class="cart_product_picture_box">
                                <a href="@Url.Action("Product", "Product", new { id = cartItem.CartItemProductID })">
                                    <img src="/bilder/1728141-amd-ryzen-65w-5-pib-right-1260x709.webp" class="cart_product_image" />
                                </a>
                            </div>
                            <div class="cart_product_info">
                                <h3>@cartItem.CartProduct.ProductName  </h3>
                                <h4 class="antal_cart">
                                    <form method="post" asp-controller="Cart" asp-action="UpdateQuantity">
                                        <input type="hidden" name="cartItemID" value="@cartItem.CartItemID" />
                                        <input type="number" class="antal" min="1" max="100" name="quantity" value="@cartItem.CartItemQuantity" />
                                        <button type="submit" class="btn-outline-primary">Ändra</button>
                                    </form>
                                </h4>
                                <h5>
                                    Lagerstatus: <span class="stock_dot_product"> </span>
                                </h5>
                                <h2>@(cartItem.CartProduct.ProductPrice * cartItem.CartItemQuantity) kr</h2>
                                <div class="delete_box">
                                    <a href="@Url.Action("RemoveFromCart", "Cart", new { cartItemID = cartItem.CartItemID })">
                                        <span class="material-icons-outlined" id="delete">delete_outline</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="voucher">
                    <h4 class="voucher_text">Kampanjkod</h4>
                    <input type="text" name="vouchername" class="voucher_entry" placeholder="Skriv in koden här:">
                    <button>Använd</button>
                </div>

                <div class="sum">
                    @{
                        var sum = 0;
                        foreach (var cartItem in cartItems)
                        {
                            var cartItemPrice = cartItem.CartProduct.ProductPrice * cartItem.CartItemQuantity;
                            sum += cartItemPrice;
                        }
                        ViewBag.TotalPrice = sum;
                    }
                    <h2 class="cart_sum">Totalt: @sum kr</h2>
                    <h5>@cartID</h5>
                    <h5>@ViewBag.UserID</h5>
                    <h5>@ViewBag.TotalPrice</h5>
                </div>


