                        <a href="#" class="mobile_category">Kundservice</a>
                        <a href="#" class="mobile_category" onclick="darkmode()">Byt tema</a>
                    </div>
                </div>

                <a href="@Url.Action("Index", "Home")">
                    <img src="/bilder/logotyp_datio_stor_transparent.png" alt="Datio logotyp"
                         id="datio_logo">
                </a>

                <form class="form_search">
                    <input type="text" placeholder="Sök..." class="search">
                    <button type="submit" class="sök_knapp">
                        <span class="material-icons-outlined" id="search_icon">
                            search
                        </span>
                    </button>
                </form>

                <form method="get" action="logga_in.html" class="form_konto">
                    <button type="submit" class="konto">
                        <span class="material-icons-outlined" id="account_icon">person_outline</span>
                        <span id="account_text">Mitt konto</span>
                    </button>
                </form>

                <form method="get" action="kundvagn.html" class="form_kundvagn">
                    <button type="submit" class="kundvagn">
                        <span class="material-icons-outlined" id="shopping_cart_icon">shopping_cart</span>
                    </button>
                </form>
            </div>

            <div class="nav">
                <ul>
                    <li class="dropdown" id="menu_link2">
                        <a href="kategori.html" id="menu_link"><span class="material-icons-outlined" id="menu_icon">menu</span></a>
                        <a href="kategori.html" class="dropdown-knapp" id="all_categories_text">Alla kategorier &#8964;</a>
                    </li>
                    <li class="dropdown">
                        <a href="kategori.html" class="dropdown-knapp">Datorer</a>
                    </li>
                    <li class="dropdown">
                        <a href="kategori.html" class="dropdown-knapp">Bildskärmar</a>
                    </li>

                    <li class="dropdown">
                        <a href="kategori.html" class="dropdown-knapp">Hem/fritid</a>
                    </li>

                    <li class="dropdown">
                        <a href="kategori.html" class="dropdown-knapp">Kameror</a>
                    </li>

                    <li class="dropdown">
                        <a href="kategori.html" class="dropdown-knapp">Kontor</a>
                    </li>
                    <li class="dropdown">
                        <a href="kategori.html" class="dropdown-knapp">Mobil</a>
                    </li>
                </ul>
            </div>

            <!--MAIN MAIN MAIN MAIN MAIN MAIN MAIN MAIN MAIN MAIN MAIN MAIN MAIN MAIN MAIN MAIN-->

            <div class="produkt_sida_upper">
                <div class="produkt_bild_box">
                    <img src="/bilder/1728141-amd-ryzen-65w-5-pib-right-1260x709.webp" id="produkt_sida_bild"
                         alt="produktbild av produkt X">
                </div>


                @*                 <img src="@product.ProductImage" alt="@product.ProductDescription">
                <h2>@product.ProductName</h2>
                <h3>@product.ProductPrice kr</h3>
                <h4 class="stock_text">
                <span class="stock_dot"></span> i lager: @product.ProductStock
                </h4> *@

                <div class="produkt_beställning_box">
                    <h1>@product.ProductName</h1>
                    <h2>@product.ProductPrice kr</h2>
                    <h3>Lagerstatus: @product.ProductStock <span class="stock_dot_product"></span></h3>
                    <h4>
                        Antal:
                        <input type="number" id="antal" min="1" max="100" value="1">
                    </h4>
                    <h4> ProductID: @product.ProductID  </h4>

                    <div class="produkt_knappar">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productID" value="@product.ProductID" />
                            <input type="hidden" name="price" value="@product.ProductPrice" />
                            <input type="number" name="quantity" id="antal" min="1" max="100" value="1" />
                            <button type="submit" id="produkt_köp_knapp">Lägg i kundvagn</button>
                        </form>
@*                         <button type="button" id="produkt_köp_knapp">
                            Lägg i kundvagns
                        </button> *@
                    </div>
                    <button class="facts_button" id="facts_support">
                    <a href="@Url.Action("AddToWishlist", "Product", new { wishlistProductID = product.ProductID })" class="secondary_button" >Lägg till önskelistan</a>
                    </button>
                </div>
            </div>

            <div class="produkt_sida_down">
                <div class="produkt_beskrivning_box">
                    <h2>Produktbeskrivning</h2>
                    <br>
                    @Html.Raw(product.ProductDescription)

                    <h2>Produktvideor</h2>
                    <br>
                    @*           <video class="video" controls poster="bilder/1728141-amd-ryzen-65w-5-pib-right-1260x709.webp">
                    <source src="videor/amdPromoVid.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                    </video> *@
                    <br>
                    <iframe class="video" src="https://www.youtube-nocookie.com/embed/CTiRNnSg0jA" title="YouTube video player"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                            allowfullscreen></iframe>
                </div>
                <br>

                <div class="produkt_specifikationer">
                    <h2>Tekniska specifikationer</h2>
                    <br>
                    @if (productSpecs != null)
                    {
                        foreach (var category in productSpecs)
                        {
                            <h3>@category.Key</h3>
                            <table class="table">
                                @foreach (var spec in category.Value)
                                {
                                    <tr>
                                        <td>@spec.Key</td>
                                        <td>@spec.Value</td>
                                    </tr>
                                }
                            </table>
                        }
                    }
                    else
                    {
                        <p>Specifikationer är inte tillgängliga för denna produkt.</p>
                    }

                </div>
            </div>

            <h3 class="product_showcase_type_text">Liknande produkter</h3>
            <div class="product_field">
                <div class="product_grid">
                    @foreach (var randomProduct in randomProducts)
                    {
                        <div class="produkt_box">
                            <a href="@Url.Action("Product", "Product", new { id = randomProduct.ProductID })">
                                <img src="@randomProduct.ProductImage" alt="@randomProduct.ProductDescription">
                                <h2>@randomProduct.ProductName</h2>
                                <h3>@randomProduct.ProductPrice kr</h3>
                                <h4 class="stock_text">
                                    <span class="stock_dot"></span> i lager: @randomProduct.ProductStock
                                </h4>
                            </a>
                        </div>
                    }
                </div>
                <a class="next_products">&#10095;</a>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="footer_down">
            <div class="footer_box" id="sociala_medier_box">
                <h2>Följ oss</h2>

                <div class="sociala_medier_box">
                    <a id="yt" class="sociala_medier" href="http://Youtube.com" target="_blank">
                        <img class="sociala_medier"
                             src="/bilder/youtube.png" alt="">
                    </a>

                    <a class="sociala_medier" href="http://Twitter.com" target="_blank">
                        <img class="sociala_medier"
                             src="/bilder/twitter.png" alt="">
                    </a>

                    <a class="sociala_medier" href="http://Facebook.com" target="_blank">
                        <img class="sociala_medier"
                             src="/bilder/facebook.png" alt="">
                    </a>

                    <a class="sociala_medier" href="http://Instagram.com" target="_blank">
