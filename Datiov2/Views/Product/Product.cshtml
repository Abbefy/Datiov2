    ViewData["Title"] = "Product";
    var product = Model;
    var randomProducts = ViewBag.RandomProducts as List<ProductModel>;
    var productID = product.ProductID;
    var productSpecs = ViewBag.ProductSpecifications as Dictionary<string, Dictionary<string, string>>;
    var productSpecs2 = ViewBag.ProductSpecifications2 as Dictionary<string, Dictionary<string, string>>;

}



